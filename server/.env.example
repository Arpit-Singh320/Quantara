# ===========================================
# Quantara Server Environment Configuration
# ===========================================

# Server
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/quantara?schema=public

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Gemini AI (Google)
GEMINI_API_KEY=your-gemini-api-key

# OAuth - Microsoft (for Outlook/Calendar integration)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# OAuth - Salesforce
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# OAuth - Google (for Gmail/Calendar integration)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth - HubSpot
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# Encryption (for storing OAuth tokens)
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=debug
